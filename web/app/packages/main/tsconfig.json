{
  "extends": ["@tsconfig/strictest/tsconfig.json"],
  "compilerOptions": {
    /* common */
    "rootDir": "src/",

    /* library */
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "target": "ES2020",
    "noEmit": true,
    "jsxImportSource": "preact",
    "useDefineForClassFields": true,

    /* modules */
    "module": "ESNext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true
  }
}
